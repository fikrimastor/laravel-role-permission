{
    "name": "fikrimastor/laravel-role-permission",
    "description": "Simple role and permissions package for laravel projects.",
    "keywords": [
        "fikrimastor",
        "laravel-role-permission"
    ],
    "homepage": "https://github.com/fikrimastor/laravel-role-permission",
    "license": "MIT",
    "authors": [
        {
            "name": "Fikri Mastor",
            "email": "fikrimastor@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0|^8.1",
        "illuminate/auth": "^7.0|^8.0|^9.0",
        "illuminate/cache": "^7.0|^8.0|^9.0",
        "illuminate/container": "^7.0|^8.0|^9.0",
        "illuminate/contracts": "^7.0|^8.0|^9.0",
        "illuminate/database": "^7.0|^8.0|^9.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.13",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Fikrimastor\\LaravelRolePermission\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fikrimastor\\LaravelRolePermission\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
            "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {

            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
